<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="450dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#09e41e"
        android:text="Hóa Đơn Thanh Toán"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12sp"
                android:text="Số HD: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lableSHD"
                android:textColor="#0a0ef5"/>
            <TextView
                android:id="@+id/tv_SHD"
                android:textColor="#000"
                android:text="HD099"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lableSHD"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Bàn: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lableBan"
                android:layout_below="@+id/lableSHD"
                android:textColor="#0a0ef5"/>
            <TextView
                android:id="@+id/tv_So_ban"
                android:textSize="12sp"
                android:text="Không có"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_below="@+id/tv_SHD"
                android:layout_toRightOf="@+id/lableBan"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Nhân Viên: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0a0ef5"
                android:id="@+id/lableNV"/>
            <TextView
                android:id="@+id/tv_ten_nhan_vien"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="Trần Thu Ngân "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lableNV"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#0a0ef5"
                android:text="Ngày: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lableNV"
                android:id="@+id/lableNgay"/>
            <TextView
                android:id="@+id/tv_NgayLapPhieu"
                android:textSize="12sp"
                android:text="28/01/2017"
                android:textColor="#000"
                android:layout_below="@+id/tv_ten_nhan_vien"
                android:layout_toRightOf="@+id/lableNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8bb02"
        android:weightSum="4">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món"
            android:textColor="#fff"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/customs_listview_gridview"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Lượng"
            android:textColor="#fff"
            android:padding="5dp"
            android:textSize="12sp"
            android:background="@drawable/customs_listview_gridview"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn Giá"
            android:textColor="#fff"
            android:padding="5dp"
            android:textSize="12sp"
            android:background="@drawable/customs_listview_gridview"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành Tiền"
            android:textColor="#fff"
            android:padding="5dp"
            android:textSize="12sp"
            android:background="@drawable/customs_listview_gridview"
            android:textStyle="bold"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_danhSach_chiTiec"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tổng Tiền: "
                    android:textSize="12sp"
                    android:textColor="#0a0ef5"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tổng Thanh Toán: "
                    android:textSize="12sp"
                    android:textColor="#0a0ef5"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>
                <TextView
                    android:text="Tiền Trả: "
                    android:textSize="12sp"
                    android:textColor="#0a0ef5"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Tiền Dư: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0a0ef5"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="420000"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/tvTongTien"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="420000"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/tvTongThanhToan"/>
                <EditText
                    android:id="@+id/edt_TienTra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập số tiền (VNĐ)"
                    android:inputType="number"
                    android:background="#e1dddd"
                    android:textSize="12sp"
                    android:maxLength="18"
                    android:padding="5dp"/>
                <TextView
                    android:text="0"
                    android:textSize="12sp"
                    android:id="@+id/tvTienDu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#000"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <Button
                android:id="@+id/btn_Luu"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="12sp"
                android:background="@drawable/customs_bg_button" />
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Đóng"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/btnDong"
                android:background="@drawable/customs_bg_button"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>