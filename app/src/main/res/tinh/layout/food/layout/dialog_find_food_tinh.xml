<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Lọc Các Món Ăn"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#56de13"
        android:padding="15dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="20dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc theo loại món"
            android:button="@drawable/customs_checkbox"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:id="@+id/rdbFindToFoodGroup"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spFoodG"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiển thị tất cả"
            android:button="@drawable/customs_checkbox"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:checked="true"
            android:id="@+id/rdbFull"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Lọc"
            android:layout_marginRight="10dp"
            android:background="@drawable/customs_bg_button"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/btnFind"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hủy"
            android:background="@drawable/customs_bg_button"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/btnClose"/>
    </LinearLayout>
</LinearLayout>