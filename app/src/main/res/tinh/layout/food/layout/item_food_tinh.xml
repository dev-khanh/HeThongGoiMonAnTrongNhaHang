<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/customs_listview_gridview">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:id="@+id/img"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Tên món (Còn / Hết)"
        android:layout_toRightOf="@+id/img"
        android:id="@+id/tvFoodName"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1015d9"
        android:text="100000 VNĐ"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/tvFoodName"
        android:id="@+id/tvFoodMoney"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#080808"
        android:text="Tên loại món"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/tvFoodMoney"
        android:id="@+id/tvFoodGroupName"
        android:textSize="12sp"/>
</RelativeLayout>