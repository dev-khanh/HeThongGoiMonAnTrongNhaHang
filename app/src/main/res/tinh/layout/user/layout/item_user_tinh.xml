<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/customs_listview_gridview">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/img"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ Tên: "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toRightOf="@+id/img"
        android:id="@+id/tvFN"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ Tên"
        android:textColor="#000"
        android:textSize="14sp"
        android:id="@+id/tvFullName"
        android:layout_toRightOf="@+id/tvFN"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài Khoản: "
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/tvFN"
        android:id="@+id/tvUN"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài khoản người dùng"
        android:textColor="#000"
        android:textSize="12sp"
        android:id="@+id/tvUserName"
        android:layout_toRightOf="@+id/tvUN"
        android:layout_below="@+id/tvFullName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Nhóm: "
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/tvUN"
        android:id="@+id/tvGU"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhóm"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tvGU"
        android:layout_below="@+id/tvUserName"
        android:id="@+id/tvGroupUser"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/tvGroupUser"
        android:textColor="#8e8b8b"
        android:id="@+id/tvstate"/>
</RelativeLayout>