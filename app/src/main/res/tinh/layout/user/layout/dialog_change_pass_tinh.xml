<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#3bea13"
        android:id="@+id/tvTitle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e5e5"
                android:textSize="10sp"
                android:padding="5dp"
                android:hint="Mật khẩu cũ (6 -> 30 ký tự)"
                android:inputType="textPassword"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/edtPassWord"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e5e5"
                android:textSize="10sp"
                android:padding="5dp"
                android:hint="Mật khẩu mới (6 -> 30 ký tự)"
                android:inputType="textPassword"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edtPassWord"
                android:id="@+id/edtPassWordNew"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e6e5e5"
                android:textSize="10sp"
                android:padding="5dp"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edtPassWordNew"
                android:id="@+id/edtPassWordNewAgain"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/edtPassWordNewAgain">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Lưu"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:id="@+id/btnSave"
                    android:textAllCaps="false"
                    android:background="@drawable/customs_bg_button"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Hủy"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:id="@+id/btnClose"
                    android:background="@drawable/customs_bg_button"
                    android:textAllCaps="false"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>