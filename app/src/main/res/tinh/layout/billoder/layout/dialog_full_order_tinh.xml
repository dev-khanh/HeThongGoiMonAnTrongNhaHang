<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="450dp"
    android:layout_height="300dp"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Chi Tiết Phiếu Order"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:background="#3bea13"
        android:textStyle="bold"
        android:id="@+id/tvTitle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding = "10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1333d6"
            android:text="Số: "
            android:id="@+id/lbIdOrder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12sp"
            android:text="id"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/lbIdOrder"
            android:id="@+id/tvIdOrder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1333d6"
            android:textSize="12sp"
            android:text="Ngày lập: "
            android:layout_below="@+id/lbIdOrder"
            android:id="@+id/lbDate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12sp"
            android:text="00/00/0000"
            android:layout_toRightOf="@+id/lbDate"
            android:layout_below="@id/tvIdOrder"
            android:id="@+id/tvDate"/>
        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/viewCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Bàn: "
            android:textColor="#1333d6"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/viewCenter"
            android:id="@+id/lbTableName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã xóa"
            android:textSize="12sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/lbTableName"
            android:id="@+id/tvTableName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên: "
            android:textSize="12sp"
            android:textColor="#1333d6"
            android:layout_toRightOf="@+id/viewCenter"
            android:layout_below="@+id/lbTableName"
            android:id="@+id/lbUser"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã xóa"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/lbUser"
            android:layout_below="@+id/tvTableName"
            android:id="@+id/tvUser"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STT"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1333d6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/customs_listview_gridview"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Tên Món Ăn"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1333d6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/customs_listview_gridview"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SL"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1333d6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/customs_listview_gridview" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tình Trạng"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1333d6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/customs_listview_gridview"/>
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/gv"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Đóng"
        android:background="@drawable/customs_bg_button"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/btnClose"/>
</LinearLayout>