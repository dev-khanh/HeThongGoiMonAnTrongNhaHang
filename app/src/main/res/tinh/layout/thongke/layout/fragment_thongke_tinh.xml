<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#2fea16"
        android:text="Thống Kê Hóa Đơn Thanh Toán"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Chọn Ngày"
                android:textColor="#000"
                android:background="@drawable/customs_listview_gridview"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/customs_listview_gridview"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Từ ngày"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        android:textColor="#f71803"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:id="@+id/tvDateStart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đến ngày"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        android:textColor="#f71803"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:id="@+id/tvDateEnd"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Chọn Kiểu"
                android:textColor="#000"
                android:background="@drawable/customs_listview_gridview"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/customs_listview_gridview">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Thống kê hóa đơn"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/rdbPay"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thống kê món ăn"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:id="@+id/rdbFood"/>
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/customs_bg_button"
        android:textColor="#fff"
        android:text="Bắt Đầu"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/btnStart"/>
</LinearLayout>